{
    "name": "django_tailwind",
    "description": "",
    "scripts": {
        "start": "npm run dev",
        "build": "npm run build:clean && npm run build:sass && npm run build:postcss && npm run build:cleancss",
        "build:clean": "rimraf theme/static/css",
        "build:sass": "node-sass --output-style compressed theme/static_src/src/styles.scss theme/static/css/styles.css",
        "build:postcss": "NODE_ENV=production postcss --config . --map false --output theme/static/css/styles.css theme/static/css/styles.css",
        "build:cleancss": "cleancss -o theme/static/css/styles.css theme/static/css/styles.css",
        "dev": "watch \"npm run dev:sass && npm run dev:postcss\" theme/static_src/src",
        "dev:sass": "node-sass --output-style expanded --source-map true theme/static_src/src/styles.scss theme/static/css/styles.css",
        "dev:postcss": "postcss --config . --map true --output theme/static/css/styles.css theme/static/css/styles.css"
    },
    "keywords": [],
    "author": "",
    "license": "MIT",
    "devDependencies": {
        "autoprefixer": "^10.0.2",
        "clean-css-cli": "^4.3.0",
        "node-sass": "^5.0.0",
        "postcss": "^8.1.9",
        "postcss-cli": "^8.3.0",
        "postcss-scss": "^3.0.4",
        "rimraf": "^3.0.2",
        "tailwindcss": "^2.0.1",
        "watch": "^1.0.2"
    }
}